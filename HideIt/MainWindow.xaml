<Window x:Class="HideIt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HideIt"
        mc:Ignorable="d"
        Title="Hide it!" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" >
    <StackPanel Width="200" Background="LightGray">
        <TextBlock  Margin="10,5,10,0" Text="图标名:"/>
        <TextBox x:Name="TbName" Padding="5" Margin="10,5" Text="微信"/>
        
        <Button Padding="20,10" x:Name="BtnHideIt" Margin="10,5" Content="Hide it" Click="BtnHideIt_Click"/>
        <Button Padding="20,10" x:Name="BtnHideMe" Margin="10,5" Content="隐藏自己" Click="BtnHideMe_Click"/>
        <CheckBox Margin="12,10" IsChecked="True" Content="使用Win+Q" Click="CheckBox_Click"/>
    </StackPanel>
</Window>
